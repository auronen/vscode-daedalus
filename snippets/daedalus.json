{
	"For-Loop": {
		"prefix": "for",
		"body": [
			"var int $1_counter;",
			"",
			"func void For$1() {",
			"\t$1_counter = 0;",
			"};",
			"",
			"func void For$1_Loop() {",
			"\t// Loop body here:",
			"\t$0",
			"",
			"\t$1_counter = $1_counter + 1;",
			"\tif ($1_counter < $2) {",
			"\t\tFor$1_Loop();",
			"\t};",
			"};"
		],
		"description": "For-Loop"
	},
	"While-Loop": {
		"prefix": "while",
		"body": [
			"func void While_$1() {",
			"\tWhile_$1_Loop();",
			"};",
			"",
			"func void While_$1_Loop() {",
			"",
			"\tif ($2) {",
			"\t\t// Loop body here:",
			"\t\t$0",
			"\t\tWhile_$1_Loop();",
			"\t};",
			"};"
		],
		"description": "While-Loop"
	},
	"If-Statement": {
		"prefix": "if",
		"body": [
			"if ($1) {",
			"\t$0",
			"};"
		],
		"description": "If-Statement"
	},
	"Function": {
		"prefix": [ "func", "function"],
		"body": [
			"func ${1|void,int,string|} ${2:Function name} (${3:Parameters})",
			"{",
			"\t$0",
			"};"
		],
		"description": "function template"
	},
	"Dialogue": {
		"prefix": [ "c_info", "dialogue", "dia"],
		"body": [
			"instance $1_${2:Dialog name}(C_INFO)",
			"{",
			"\tnpc         = ${1:NPC instance};",
			"\tnr          = ${3:Dialog number};",
			"\tcondition   = $1_$2_Condition;",
			"\tinformation = $1_$2_Info;",
			"\tpermanent   = ${4|TRUE,FALSE|};",
			"\tdescription = \"${5:Dialog description}\";",
			"};\n",

			"func int $1_$2_Condition()",
			"{",
			"\t$6",
			"};\n",
			
			"func void $1_$2_Info()",
			"{",
			"\t$0",
			"};"

		],
		"description": "C_INFO template"
	}
}